{% extends 'layout/frontAdmin.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}

    <div class="container">
        <h1>{{ topic.title }}</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>CreatedAt</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for message in messages %}
                <tr>
                    <td>{{ message.id }}</td>
                    <td>{{ message.user.FirstName }} {{ message.user.LastName }}</td>
                    <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ message.content }}</td>
                    <td>
                        <div style="display: flex; flex-direction: row">
                            <a class="btn btn-outline-secondary" style="margin: 0px 5px"
                               href="{{ path('message_edit', {'id': message.id}) }}">edit</a>
                            {{ include('message/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('topic_index', {'id': topic.forum.id}) }}">retour</a>
        <a class="btn btn-success" href="{{ path('message_new', {'id': topic.id}) }}">Create new</a>

    </div>
{% endblock %}
