{% extends 'layout/frontAdmin.html.twig' %}

{% block title %}Topic index{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ forums.title }}</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>CreatedAt</th>
                <th>PathLogo</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for topic in topics %}
                <tr>
                    <td>{{ topic.id }}</td>
                    <td>{{ topic.title }}</td>
                    <td>{{ topic.createdAt ? topic.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ topic.pathLogo }}</td>
                    <td>
                        <div style="display: flex; flex-direction: row">
                            <a class="btn btn-outline-primary"
                               href="{{ path('message_index', {'id': topic.id}) }}">show</a>
                            <a class="btn btn-outline-secondary" style="margin: 0px 5px"
                               href="{{ path('topic_edit', {'id': topic.id}) }}">edit</a>
                            {{ include('topic/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('forum_index') }}">retour</a>
        <a class="btn btn-success" href="{{ path('topic_new',{'id': forums.id}) }}">Create new</a>
    </div>
{% endblock %}
